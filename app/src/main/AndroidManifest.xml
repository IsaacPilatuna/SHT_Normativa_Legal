<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isaacpilatuna.sht_normativa_legal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/sht_full_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ModuloAutenticacion.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ModuloHome.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ModuloMision.MisionActivity"
            android:label="@string/title_activity_mision"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ModuloContactos.ContactosActivity"
            android:label="@string/title_activity_contactos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ModuloNormativas.NormativasActivity"
            android:label="@string/title_activity_normativas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ModuloNormativas.ViewPDFActivity" />
        <activity android:name=".ModuloAutenticacion.LoginActivity" />
        <activity android:name=".ModuloAutenticacion.RegistroActivity" />
        <activity
            android:name=".ModuloNormativas.MenuNormativasActivity"
            android:label="@string/title_activity_menu_normativas"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>